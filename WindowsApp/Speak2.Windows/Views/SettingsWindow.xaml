<Window
    x:Class="Speak2.Windows.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Speak2 Settings"
    Width="760"
    Height="520">
    <Grid>
        <NavigationView x:Name="RootNavigation" IsBackButtonVisible="Collapsed" PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="setup" Content="Setup" Icon="Play" />
                <NavigationViewItem Tag="general" Content="General" Icon="Setting" />
                <NavigationViewItem Tag="models" Content="Models" Icon="Library" />
                <NavigationViewItem Tag="dictionary" Content="Dictionary" Icon="Edit" />
                <NavigationViewItem Tag="history" Content="History" Icon="Document" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
